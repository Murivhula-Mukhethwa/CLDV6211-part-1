@model Event_EaseApp.Models.Venue

<h2>Delete Venue</h2>

<h4>Are you sure you want to delete this venue?</h4>

<div class="border p-3 mt-3">
    <dl class="row">
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 200px;" />
        </dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VenueID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
